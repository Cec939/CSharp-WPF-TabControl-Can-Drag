<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Dockable TabControl" Height="450" Width="800"        AllowDrop="True"     DragOver="Window_DragOver"
        Drop="Window_Drop">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 主TabControl -->
        <TabControl x:Name="MainTabControl" Grid.Row="0"
                    local:TabDragDropBehavior.IsEnabled="True"
                    AllowDrop="True">
            <TabItem Header="Tab 1">
                <TextBlock Text="Content 1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Tab 2">
                <TextBlock Text="Content 2" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
            <TabItem Header="Tab 3">
                <TextBlock Text="Content 3" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </TabItem>
        </TabControl>

        <!-- 状态显示 -->
        <TextBlock x:Name="StatusText" Grid.Row="1" Margin="10" Foreground="Gray"/>

        <!-- 添加拖拽提示框 -->
        <Border x:Name="DragHint" Grid.Row="0" 
                Background="#8000FF00" 
                CornerRadius="10" 
                Visibility="Collapsed"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Padding="20">
            <TextBlock Text="释放此处创建浮动窗口" 
                       FontSize="16" 
                       Foreground="White"
                       FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>